<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rsg.virtualremote">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TakePictureActivity"
            android:label="@string/title_activity_take_picture"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SelectRemoteActivity"
            android:label="@string/title_activity_select_remote"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RemoteViewActivity"
            android:label="@string/title_activity_remote_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".EditRemoteActivity" />
        <activity android:name=".ChangeRemoteActivity"></activity>
    </application>

</manifest>